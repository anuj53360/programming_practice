package leetcode;

public class PlusOne {

	 public static int[] plusOne(int[] digits) {
	        int []array=new int[digits.length];
	             
	         for(int i=0;i<digits.length;i++){
	             if(i==digits.length-1){
	                 array[i]=digits[i]+1;
	             }
	    else{         
	             array[i]=digits[i];
	         }
	             }
	    
	    
	    
	    return array;
	    }
	
	public static void main(String[] args) {
		int[] digits= {4,3,2,1};
		plusOne(digits);
	}
}
