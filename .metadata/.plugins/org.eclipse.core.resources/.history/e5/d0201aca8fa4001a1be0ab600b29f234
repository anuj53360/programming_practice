package hackerrank;

public class AlternatingCharacter {

	static int alternatingCharacters(String s) {
		
		StringBuffer sb=new StringBuffer();
		int i=0;
		int j=1;
		while(j<s.length()) {
			if(s.charAt(i)==s.charAt(j)) {
				j++;
			}else {
				sb.append(i);
				i++;
			}
		}
		
		
		return 0;


    }
	
	public static void main(String[] args) {
		String s="AAABBB";
		alternatingCharacters(s);
	}
}
