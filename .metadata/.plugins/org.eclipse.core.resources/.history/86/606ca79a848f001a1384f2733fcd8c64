package leetcode;

public class TwoSum {

	
public  static int[] twoSum(int[] nums, int target) {

	int []array=new int[2];
	int i=0;
	int j=nums.length-1;
	int sum=0;
	  while(i<j) {
		  sum=nums[i]+nums[j];
		  if(sum==target) {
			  array[0]=i;
			  array[1]=j;
		  }
		  if(sum<target) {
		  i++;
	  }else {
		  		 j--;
	  }
	  }
	return array;
    }
	
	public static void main(String[] args) {
//		int[] nums= {2,7,11,15};
		int[] nums= {3,2,4};
		int target=6;
		twoSum(nums,target);
	}
}
